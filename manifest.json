{
    "manifest_version": 3,
    "name": "Redirect to WhatsApp",
    "version": "1.0.0",
    "description": "Quickly redirect to WhatsApp by entering a phone number or using the context menu.",
    "default_locale": "en",
    "permissions": [
        "contextMenus",
        "activeTab",
        "storage"
    ],
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/16.png",
            "48": "icons/48.png",
            "128": "icons/128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options.html",
    "host_permissions": [
        "https://wa.me/*"
    ]
}